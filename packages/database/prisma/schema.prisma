// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Editor {
  id    Int     @id @default (autoincrement())
  firstname String
  lastname String
  username String
  accesscode String?
  Videos Video[]
  srccontact String?
}

model Video {
  id    Int     @id @default(autoincrement())
  title String
  author    Editor    @relation(fields: [authorId], references: [id])
  authorId  Int
}


model Creator {
  id  Int     @id @default(autoincrement())
  firstname String
  lastname String
  username String
  accesscode String?
  companyname String
}